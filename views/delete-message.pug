extends layout

block content
    if user && user.admin 
        form(method='POST')
            h1 Are you sure you want to delete this message?
            p= message.title 
            p=message.text 
            p=message.author.name
            p=message.date
            input(type="hidden" name='messageId' value=message._id)
            button(type='submit') Delete 
            a(href='/') Cancel
    else 
        p You need to be Admin to delete messages
        a(href='/') Go to Home Page
