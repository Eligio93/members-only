extends layout

block content
  if !user
    .signup-box
      form(action='' method='POST').form
        h2 Sign Up
        if validationErrors 
          ul 
          each error in validationErrors.errors
            li.sess-message= error.msg
        label(for='user-name') Name*
        input(id='user-name' name='name' placeholder='Name' type='text' required minLength='3')
        label(for='user-last-name') Last Name*
        input(id='user-last-name' name='lastName' placeholder='Last Name' type='text' required minLength='3')
        label(for='user-email') Email*
        input(id='user-email' name='email' placeholder='email@email.com' type='email')
        label(for='user-password') Password*
        input(id='user-password' name='password' type='password' required minLength='4')
        label(for='permission-key') Admin Key
        input(id='permission-key' name='permission-key' type='text' placeholder='Admin Key || Member Key')
        button.auth-btn Sign Up
  else
    p You can't register a new user while logged in
    br
    a(href='/logout') Log Out
